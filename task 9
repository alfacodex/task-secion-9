#include <iostream>
using namespace std;

// ----------- Class Math -----------
class Math {
public:
    // دالة static تجمع عددين
    static int add(int a, int b) {
        return a + b;
    }
};

// ----------- Class Box -----------
class Box {
private:
    int length;   // متغير خاص

public:
    // Constructor يضع القيمة = 10
    Box() {
        length = 10;
    }

    // تعريف friend function
    friend void printLength(Box b);
};

// Friend Function تعريفها خارج الكلاس
void printLength(Box b) {
    cout << "Length = " << b.length << endl;
}

// ----------- Main Function -----------
int main() {
    // استدعاء الدالة static من Math بدون كائن
    cout << "Sum = " << Math::add(5, 7) << endl;

    // إنشاء كائن من Box
    Box box1;
    // استدعاء friend function
    printLength(box1);

    return 0;
}
__________________________________________________________________
Sum = 12
Length = 10


=== Code Execution Successful ===
